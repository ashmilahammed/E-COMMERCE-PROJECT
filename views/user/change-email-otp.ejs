
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"/> 
    <style>
        /* General Reset */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #ffffff, #ffffff);
            color: #fff;
        }

        .container {
            background: #f1f1f1;
            border-radius: 10px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 400px;
            padding: 2rem;
            text-align: center;
            color: #333;
        }

        .container h1 {
            font-size: 24px;
            margin-bottom: 1rem;
            color: #ff2449;
        }

        .input-group {
            margin-bottom: 1rem;
        }

        .input-group input {
            width: 100%;
            padding: 10px;
            border: 2px solid #ff2449;
            border-radius: 5px;
            font-size: 16px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 10px;
            font-size: 16px;
            color: #fff;
            background: #ff3e5e;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .btn:hover {
            background: #db0024;
        }

        .timer {
            margin-top: 1rem;
            font-size: 14px;
            color: #666;
        }

        .message {
            margin-top: 1rem;
            color: red;
            font-size: 14px;
        }

        .link {
            display: block;
            margin-top: 2rem;
            color: #ff2449;
            text-decoration: none;
            font-size: 14px;
        }

        .link:hover {
            text-decoration: underline;
        }

        /* .swal2-popup {
           top: 20px !important;
           position: fixed;
           left: 50%;
           transform: translateX(-50%);
        } */

    </style>
</head>
<body>

   <form action="/verify-otp" id="otpForm" method="post" onsubmit="return validateOTPForm()" >

    <div class="container">
        <h1>Verify Your OTP</h1>
        <p>Enter the OTP sent to your email to verify your account.</p>

        <div class="input-group">
            <input type="text" id="otp" placeholder="Enter OTP" maxlength="6" pattern="\d*"/>
        </div>
        <button class="btn" id="verify-btn">Verify OTP</button>

        <div class="timer">
            <span id="timer-text">Time Remaining: <span id="timer">60</span> seconds</span>
        </div>
        <div class="message" id="otp-expired-message" style="display: none;">
            OTP expired! Please click resend to get a new OTP.
        </div>
        <button type="button" class="btn" id="resend-btn" onclick="resendOTP()" disabled>Resend OTP</button>

        <a href="/login" class="link">Already verified? Login here</a>
    </div>

   </form>

   <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    
        // Timer logic
        const timerElement = document.getElementById('timer');
        const resendButton = document.getElementById('resend-btn');
        const verifyButton = document.getElementById('verify-btn');
        const otpExpiredMessage = document.getElementById('otp-expired-message');

        let timeLeft = 50;
        const countdown = setInterval(() => {
            timeLeft--;
            timerElement.textContent = timeLeft;

            if (timeLeft <= 0) {
                clearInterval(countdown);
                resendButton.disabled = false;
                verifyButton.disabled = true;
                otpExpiredMessage.style.display = 'block';
                document.getElementById('timer-text').style.display = 'none';
            }
        }, 1000);


   function validateOTPForm() {
       // event.preventDefault();
       const otpInput = document.getElementById("otp").value;
        
       $.ajax({
           type : "POST",
           url : "/verify-otp",
           data : JSON.stringify({otp:otpInput}),
           contentType: "application/json",

           success : function(response){
               if(response.success){
                   Swal.fire({
                       icon : "success",
                       title : "success",
                       text : "OTP verified Successfully.",
                       showConfirmButton : false,
                       timer : 1500
                   }).then(() =>{
                       window.location.href = response.redirectUrl;
                   })
               }else {
                   Swal.fire({
                       icon : "error",
                       title : "Error",
                       text : response.message ,
                   })
               }
           },
           error : function(){
               Swal.fire({
                   icon : "error",
                   title : "Invalid OTP",
                   text : "Please try again."
               })
           }
       })
       return false
   }  
   
   function resendOTP() {
   // Reset the timer
   timeLeft = 50;
   timerElement.textContent = timeLeft;
   otpExpiredMessage.style.display = 'none';
   verifyButton.disabled = false;
   resendButton.disabled = true;
   document.getElementById('timer-text').style.display = 'block';

   // Restart the countdown
   const countdown = setInterval(() => {
       timeLeft--;
       timerElement.textContent = timeLeft;

       if (timeLeft <= 0) {
           clearInterval(countdown);
           resendButton.disabled = false;
           verifyButton.disabled = true;
           otpExpiredMessage.style.display = 'block';
           document.getElementById('timer-text').style.display = 'none';
       }
   }, 1000);

   // Send an AJAX request to resend the OTP
   $.ajax({
       type: "POST",
       url: "/resend-otp", // Correct URL path
       success: function (response) {
           if (response.success) {
               Swal.fire({
                   icon: "success",
                   title: "Success",
                   text: "OTP has been resent successfully.",
                   showConfirmButton: false,
                   timer: 1500,
               });
           } else {
               Swal.fire({
                   icon: "error",
                   title: "Error",
                   text: "An error occurred while resending the OTP. Please try again.",
               });
           }
       },
       error: function () {
           Swal.fire({
               icon: "error",
               title: "Error",
               text: "Failed to resend the OTP. Please check your connection.",
           });
       },
   });

   return false;
}


    </script>
</body>
</html>


