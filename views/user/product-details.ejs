            color: #ffffff;
        }

        .product-image-zoom {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 500px;
        }

        .zoomable-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-image-zoom:hover .zoomable-image {
            transform: scale(1.5);
            cursor: zoom-in;
        }

        /* Toast styles */
        #toast-container {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 1000;
        }

        .toast-message {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 10px;
            margin-bottom: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .toast-message.show {
            opacity: 1;
        }

        .toast-message.success {
            background-color: #dff0d8;
            border-color: #d6e9c6;
            color: #3c763d;
        }

        .toast-message.error {
            background-color: #f2dede;
            border-color: #ebccd1;
            color: #a94442;
        }
    </style>

