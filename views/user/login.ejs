<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page Template</title>
    <style>
        /* Global Styles */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: white;
        }

        .container {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            display: flex;
            flex-direction: row;
            width: 930px;
            height: 550px;
            background: #1e1e1e;
            color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        /* Left Image Section */
        .image-container {
            flex: 1;
            background: url('/images/nike white.webp') no-repeat center center;
            background-size: cover;
        }

        /* Right Content Section */
        .content-panel {
            flex: 1.5;
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .login-panel {
            text-align: center;
        }

        h4 {
            margin-bottom: 20px;
            font-weight: normal;
            font-size: 1.5rem;
        }

        .btn {
            padding: 12px 20px;
            width: 100%;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

        .btn-google {
            background-color: #2f7fff;
            color: white;
            padding: 12px 20px;
            width: 100%;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

        .btn-google:hover {
            background-color: rgb(27, 79, 212);
        }

        .btn:hover {
            background-color: rgb(143, 143, 143);
        }

        .divider {
            margin: 20px 0;
            position: relative;
            text-align: center;
        }

        .divider p {
            display: inline-block;
            background: #1e1e1e;
            padding: 0 10px;
            color: #ccc;
        }

        .divider::before, .divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #ccc;
        }

        .divider::before {
            left: 5%;
        }

        .divider::after {
            right: 5%;
        }

        .login-with-email {
            text-align: left;
            margin-top: 10px;
        }

        .login-with-email label {
            display: block;
            margin: 10px 0 5px;
            font-size: 0.9rem;
            color: #ccc;
        }

        .login-with-email input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #2e2e2e;
            color: #fff;
        }

        .show-password-container {
            margin-top: 10px;
            text-align: left;
        }

        .show-password-container label {
            font-size: 0.9rem;
            color: #9f9f9f;
        }

        .link-container {
            margin-top: 15px;
            text-align: center;
        }

        .link-container p {
            font-size: 15px;
            color: white;
        }

        .link-container a {
            color: #2f7fff;
            text-decoration: none;
            font-weight: bold;
        }

        .link-container a:hover {
            text-decoration: underline;
        }

        .text-panel {
            margin-top: 20px;
            text-align: left;
        }

        .text-panel h3 {
            margin-bottom: 10px;
            font-size: 1.2rem;
            font-weight: normal;
        }

        .text-panel p {
            font-size: 0.9rem;
            line-height: 1.5;
            color: #ccc;
        }
    </style>
</head>
<body>
    <form action="/login" method="post">
        <div class="container">
            <div class="card">
                <!-- Image Container -->
                <div class="image-container"></div>

                <!-- Content Panel -->
                <div class="content-panel">
                    <div class="login-panel">
                        <h4>Log in to your account</h4>
                        <button type="button" class="btn-google">Log In with Google</button>

                        <div class="divider"><p>OR</p></div>

                        <div class="login-with-email">
                            <label for="email">Email address</label>
                            <input type="email" id="email" name="email" placeholder="Enter your email address" required />

                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" placeholder="Enter your password" required />
                        </div>

                        <!-- Show Password -->
                        <div class="show-password-container">
                            <input type="checkbox" id="showPassword" />
                            <label for="showPassword">Show Password</label>
                        </div>
                        <% if(locals.message && message.length > 0) { %>
                            <div class="message" style="color: red;">
                                <%=message%>
                            </div>
                            <!-- <p class="message" style="color: red;"><%= message %></p> -->
                        <% } %>
                     

                        <button type="submit" class="btn">Continue</button>

                        <!-- Link Container -->
                        <div class="link-container">
                            <p>Don't have an account? <a href="/signup">Sign Up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script>
        const showPasswordCheckbox = document.getElementById("showPassword");
        const passwordField = document.getElementById("password");

        // Toggle password visibility
        showPasswordCheckbox.addEventListener("change", () => {
            const type = showPasswordCheckbox.checked ? "text" : "password";
            passwordField.type = type;
        });
    </script>
</body>
</html>
