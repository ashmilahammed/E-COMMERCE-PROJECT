    <script>

        async function addToWishlist(productId) {
            try {
                let selectedSize = document.querySelector('input[name="size"]:checked');

                if (!selectedSize) {
                    const sizeElements = document.querySelectorAll('.size-badge');
                    if (sizeElements.length > 0) {
                        selectedSize = sizeElements[0].textContent.trim();
                    } else {
                        showToast('No size available for this product', 'error');
                        return;
                    }
                } else {
                    selectedSize = selectedSize.value;
                }

                const size = parseInt(selectedSize);

                const response = await fetch('/wishlist/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId,
                        size
                    })
                });


                // if not logged
                const contentType = response.headers.get("content-type");
                if (!contentType || !contentType.includes("application/json")) {
                    showToast('You need to log in to add products to your wishlist', 'error');
                    return;
                }

                const result = await response.json();

                if (result.success) {
                    showToast('Product has been added to your wishlist', 'success');
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                showToast(error.message || 'Failed to add product to wishlist', 'error');
            }
        }



        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast-message ${type}`;
            toast.innerHTML = message;

            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => {
                    toast.remove();
                }, 500);
            }, 1500);
        }

    </script>


