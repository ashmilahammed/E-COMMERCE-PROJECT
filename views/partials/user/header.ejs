<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.slicknav.js"></script>
<script>
    $(document).ready(function () {
        // Initialize Slicknav for mobile menu (if using slicknav.min.css)
        $('.header__menu').slicknav({
            prependTo: '.header',
            label: ''
        });

        // Manual toggle for canvas__open (if not using Slicknav)
        $('.canvas__open').on('click', function () {
            $('.header__menu').toggleClass('active');
        });
    });





    document.addEventListener("DOMContentLoaded", async function () {
        try {
            const cartResponse = await fetch('/cart/count');
            const cartData = await cartResponse.json();
            const cartCountElement = document.querySelector('.cart-count');

            if (cartCountElement) {
                if (cartData.count > 0) {
                    cartCountElement.textContent = cartData.count;
                    cartCountElement.style.display = "flex"; // Show when there's a count
                } else {
                    cartCountElement.style.display = "none"; // Hide when count is 0
                }
            }

            const wishlistResponse = await fetch('/wishlist/count');
            const wishlistData = await wishlistResponse.json();
            const wishlistCountElement = document.querySelector('.wishlist-count');

            if (wishlistCountElement) {
                if (wishlistData.count > 0) {
                    wishlistCountElement.textContent = wishlistData.count;
                    wishlistCountElement.style.display = "flex";
                } else {
                    wishlistCountElement.style.display = "none"; 
                }
            }
        } catch (error) {
            console.error("Error loading counts:", error);
        }
    });


</script>