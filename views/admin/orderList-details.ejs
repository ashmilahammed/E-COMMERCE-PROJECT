<%- include("../../views/partials/admin/header") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .order-details-container {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .product-card {
        transition: transform 0.3s ease;
    }
    .product-card:hover {
        transform: scale(1.02);
    }
    .status-badge {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.875rem;
    }
    .status-delivered { background-color: #e0f7f2; color: #0d9488; }
    .status-processing { background-color: #f3e8ff; color: #9333ea; }
    .status-cancelled { background-color: #fee2e2; color: #dc2626; }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="order-details-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Order Details</h2>
                    <a href="/admin/orderList" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Orders
                    </a>
                </div>

                <!-- Order Summary -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Order Information</h5>
                                <p><strong>Order ID:</strong> <%= order.orderNumber %></p>
                                <p><strong>Date:</strong> <%= order.createdAt.toLocaleDateString() %></p>
                                <p>
                                    <strong>Status:</strong> 
                                    <span class="status-badge status-<%= order.orderStatus.toLowerCase() %>">
                                        <%= order.orderStatus %>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Customer Details</h5>
                                <p><strong>Name:</strong> <%= order.shippingAddress.name %></p>
                                <p><strong>Phone:</strong> <%= order.shippingAddress.phone %></p>
                                <p>
                                    <strong>Address:</strong> 
                                    <%= order.shippingAddress.landMark %>, 
                                    <%= order.shippingAddress.city %>, 
                                    <%= order.shippingAddress.state %> - 
                                    <%= order.shippingAddress.pincode %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Payment Details</h5>
                                <p><strong>Method:</strong> <%= order.payment.method %></p>
                                <p><strong>Status:</strong> <%= order.payment.status %></p>
                                <p><strong>Total Amount:</strong> ₹<%= order.pricing.finalAmount.toFixed(2) %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Details -->
                <div class="row">
                    <div class="col-12">
                        <h4 class="mb-3">Ordered Products</h4>
                        <div class="row">
                            <% order.orderItems.forEach(function(item) { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card product-card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                <img 
                                                    src="/uploads/re-image/<%= item.productImage %>" 
                                                    alt="<%= item.productDetails.name %>"
                                                    class="img-fluid rounded me-3"
                                                    style="width: 100px; height: 100px; object-fit: cover;"
                                                >
                                                <div>
                                                    <h5 class="card-title mb-1"><%= item.productDetails.name %></h5>
                                                    <p class="text-muted mb-1">
                                                        <strong>Brand:</strong> <%= item.productDetails.brand %>
                                                    </p>
                                                </div>
                                            </div>
                                            
                                            <div class="row">
                                                <div class="col-6">
                                                    <p class="mb-1"><strong>Size:</strong> <%= item.variant.size %></p>
                                                    <p class="mb-1"><strong>Quantity:</strong> <%= item.variant.quantity %></p>
                                                </div>
                                                <div class="col-6 text-end">
                                                    <p class="mb-1">
                                                        <strong>Price:</strong> 
                                                        ₹<%= item.price.salePrice.toFixed(2) %>
                                                    </p>
                                                    <p class="mb-1">
                                                        <strong>Subtotal:</strong> 
                                                        ₹<%= (item.price.salePrice * item.variant.quantity).toFixed(2) %>
                                                    </p>
                                                </div>
                                            </div>
                                            
                                            <div class="mt-3">
                                                <span class="badge 
                                                    <%= item.itemStatus === 'Delivered' ? 'bg-success' : 
                                                        item.itemStatus === 'Cancelled' ? 'bg-danger' : 
                                                        item.itemStatus === 'Processing' ? 'bg-warning' : 
                                                        'bg-info' %>">
                                                    <%= item.itemStatus %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <!-- Order Tracking -->
                <div class="row mt-4">
                    <div class="col-12">
                        <h4 class="mb-3">Order Tracking</h4>
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <p><strong>Order Date:</strong> <%= order.createdAt.toLocaleDateString() %></p>
                                    </div>
                                    <div class="col-md-4">
                                        <p><strong>Expected Delivery:</strong> <%= order.expectedDeliveryDate.toLocaleDateString() %></p>
                                    </div>
                                    <% if (order.cancelReason) { %>
                                        <div class="col-md-4">
                                            <p><strong>Cancellation Reason:</strong> <%= order.cancelReason %></p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<%- include("../../views/partials/admin/footer") %>