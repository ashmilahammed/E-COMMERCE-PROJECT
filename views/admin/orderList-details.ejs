<%- include("../../views/partials/admin/header") %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .order-details-container {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .product-card {
            transition: transform 0.3s ease;
        }

        .product-card:hover {
            transform: scale(1.02);
        }

        .status-badge {
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.875rem;
        }

        .status-delivered {
            background-color: #0fb500;
            color: #fafafa;
            font-weight: bold;
        }

        .status-shipped {
            background-color: #06dec9;
            color: #ffffff;
            font-weight: bold;
        }

        .status-pending {
            background-color: #ffa109;
            color: white;
            font-weight: bold;
        }

        .status-cancelled {
            background-color: #f51616;
            color: #f1f1f1;
            font-weight: bold;
        }
    </style>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="order-details-container">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2>Order Details</h2>
                        <a href="/admin/order-list" class="btn btn-secondary" style="background-color: #0d9488;">
                            <i class="bi bi-arrow-left"></i> Back to Orders
                        </a>
                    </div>

                    <% if (order) { %>
                        <!-- Order Summary -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Order Information</h5>
                                        <p><strong>Order ID:</strong>
                                            <%= order.orderNumber || 'N/A' %>
                                        </p>
                                        <p><strong>Date:</strong>
                                            <%= order.createdAt ? order.createdAt.toLocaleDateString() : 'N/A' %>
                                        </p>
                                        <p>
                                            <strong>Status:</strong>
                                            <span
                                                class="status-badge status-<%= (order.orderStatus || '').toLowerCase() %>">
                                                <%= order.orderStatus || 'N/A' %>
                                            </span>
                                        </p>
                                        <!-- Cancellation Messages -->
                                        <% if (order.orderStatus==='Cancelled' ) { %>
                                            <div class="alert alert-warning" role="alert">
                                                This order has been cancelled by <%= order.cancelledBy || 'Unknown' %>.
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Payment Details</h5>
                                        <% if (order.payment) { %>
                                            <p><strong>Method:</strong>
                                                <%= order.payment.method || 'N/A' %>
                                            </p>
                                            <p><strong>Status:</strong>
                                                <%= order.payment.status || 'N/A' %>
                                            </p>
                                            <p><strong>Total Amount:</strong> â‚¹<%= order.pricing &&
                                                    order.pricing.finalAmount ? order.pricing.finalAmount.toFixed(2)
                                                    : 'N/A' %>
                                            </p>
                                            <% } else { %>
                                                <p>No payment details available</p>
                                                <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Customer Details</h5>
                                        <% if (order.shippingAddress) { %>
                                            <p><strong>Name:</strong>
                                                <%= order.shippingAddress.name || 'N/A' %>
                                            </p>
                                            <p><strong>Phone:</strong>
                                                <%= order.shippingAddress.phone || 'N/A' %>
                                            </p>
                                            <p>
                                                <strong>Address:</strong>
                                                <%= order.shippingAddress.landMark || '' %>,
                                                    <%= order.shippingAddress.city || '' %>,
                                                        <%= order.shippingAddress.state || '' %> -
                                                            <%= order.shippingAddress.pincode || 'N/A' %>
                                            </p>
                                            <% } else { %>
                                                <p>No shipping address available</p>
                                                <% } %>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Product Details -->
                        <div class="row">
                            <div class="col-12">
                                <h4 class="mb-3">Ordered Products</h4>
                                <div class="row">
                                    <% if (order.orderItems && order.orderItems.length> 0) { %>
                                        <% order.orderItems.forEach(function(item) { %>
                                            <div class="col-md-4 mb-4">
                                                <div class="card product-card">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center mb-3">
                                                            <img src="/uploads/re-image/<%= item.productImage || 'default.jpg' %>"
                                                                alt="<%= item.productDetails && item.productDetails.name ? item.productDetails.name : 'Product' %>"
                                                                class="img-fluid rounded me-3"
                                                                style="width: 100px; height: 100px; object-fit: cover;">
                                                            <div>
                                                                <h5 class="card-title mb-1">
                                                                    <%= item.productDetails && item.productDetails.name
                                                                        ? item.productDetails.name : 'N/A' %>
                                                                </h5>
                                                                <p class="text-muted mb-1">
                                                                    <strong>Brand:</strong>
                                                                    <%= item.productDetails && item.productDetails.brand
                                                                        ? item.productDetails.brand : 'N/A' %>
                                                                </p>
                                                                <p>
                                                                    <strong>Category:</strong>
                                                                    <%= item.productDetails &&
                                                                        item.productDetails.category ?
                                                                        item.productDetails.category : 'N/A' %>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-6">
                                                                <p class="mb-1"><strong>Size:</strong>
                                                                    <%= item.variant && item.variant.size ?
                                                                        item.variant.size : 'N/A' %>
                                                                </p>
                                                                <p class="mb-1"><strong>Quantity:</strong>
                                                                    <%= item.variant && item.variant.quantity ?
                                                                        item.variant.quantity : 'N/A' %>
                                                                </p>
                                                            </div>
                                                            <div class="col-6 text-end">
                                                                <p class="mb-1">
                                                                    <strong>Price:</strong>
                                                                    â‚¹<%= item.price && item.price.salePrice ?
                                                                        item.price.salePrice.toFixed(2) : 'N/A' %>
                                                                </p>
                                                                <p class="mb-1">
                                                                    <strong>Subtotal:</strong>
                                                                    â‚¹<%= (item.price && item.price.salePrice &&
                                                                        item.variant && item.variant.quantity) ?
                                                                        (item.price.salePrice *
                                                                        item.variant.quantity).toFixed(2) : 'N/A' %>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <!-- <div class="mt-3">
                                                            <span class="badge 
                                                            <%= item.itemStatus === 'Delivered' ? 'bg-success' : 
                                                                item.itemStatus === 'Cancelled' ? 'bg-danger' : 
                                                                item.itemStatus === 'Processing' ? 'bg-warning' : 
                                                                'bg-info' %>">
                                                                <%= order.orderStatus || 'N/A' %>
                                                            </span>
                                                        </div> -->
                                                    </div>
                                                </div>
                                            </div>
                                            <% }); %>
                                                <% } else { %>
                                                    <div class="col-12">
                                                        <p class="text-center text-muted">No products in this order</p>
                                                    </div>
                                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Order Tracking -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 class="mb-3">Order Tracking</h4>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <p><strong>Order Date:</strong>
                                                    <%= order.createdAt ? order.createdAt.toLocaleDateString() : 'N/A'
                                                        %>
                                                </p>
                                            </div>
                                            <div class="col-md-4">
                                                <p><strong>Expected Delivery:</strong>
                                                    <%= order.expectedDeliveryDate ?
                                                        order.expectedDeliveryDate.toLocaleDateString() : 'N/A' %>
                                                </p>
                                            </div>
                                            <% if (order.cancelReason) { %>
                                                <div class="col-md-4">
                                                    <p><strong>Cancellation Reason:</strong>
                                                        <%= order.cancelReason %>
                                                    </p>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } else { %>
                            <div class="alert alert-warning text-center">
                                No order details available
                            </div>
                            <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <%- include("../../views/partials/admin/footer") %>